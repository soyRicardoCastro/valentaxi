<div
  id="testimonios"
  class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 container mb-28 mx-auto flex flex-col items-center gap-16"
>
  <div>
    <h3 class="text-3xl xl:text-4xl font-bold">Que dicen nuestros clientes</h3>
  </div>
  <!-- Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      testimonials.map((testimonial) => (
        <div class="flex flex-col rounded-3xl bg-slate-800/80">
          <div class="flex-auto p-4 md:p-6">
            <p class="mt-3 sm:mt-6 text-base md:text-xl">
              <em>" {testimonial.testimonial} "</em>
            </p>
          </div>

          <div class="p-4 rounded-b-xl md:px-6">
            <h3 class="text-sm font-semibold text-slate-300 sm:text-base">
              - {testimonial.name}
            </h3>
          </div>
        </div>
      ))
    }
  </div>
  <!-- End Grid -->
</div>
