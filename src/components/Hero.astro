---
import { cn } from "@/lib/utils";
import { buttonVariants } from "./ui/button";
---

<!-- Hero -->
<header
  class="relative overflow-hidden before:absolute before:top-0 before:left-1/2 before:bg-no-repeat before:bg-top before:bg-cover before:w-full before:h-full before:-z-[1] before:transform before:-translate-x-1/2 mb-20"
>
  <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-10">
    <!-- Title -->
    <div class="mt-5 max-w-2xl text-center mx-auto">
      <h1
        class="block font-black text-4xl md:text-5xl lg:text-6xl text-gray-200"
      >
        Puntualidad, Seguridad,
        <span
          class="bg-clip-text bg-gradient-to-tr from-green-500 to-green-400 text-transparent"
        >
          Confianza</span
        >
      </h1>
    </div>
    <!-- End Title -->

    <div class="mt-5 max-w-3xl text-center mx-auto">
      <p class="text-lg text-gray-300">
        Mas de 5 a√±os de experiencia y disponibilidad las 24 horas del dia. Te
        llevamos a ti y a tu familia a donde necesites.
      </p>
    </div>

    <!-- Buttons -->
    <div class="mt-8 grid gap-3 w-full sm:inline-flex sm:justify-center">
      <a
        class={cn(
          buttonVariants({ variant: "brand", size: "lg" }),
          "text-lg p-6 xl:text-xl xl:p-8"
        )}
        href="https://api.whatsapp.com/send/?phone=584124791885&text&type=phone_number&app_absent=0"
        target="_blank"
        rel="norel"
      >
        Contactanos Ahora
        <svg
          class="ml-2 w-3 h-3"
          width="16"
          height="16"
          viewBox="0 0 16 16"
          fill="none"
        >
          <path
            d="M5.27921 2L10.9257 7.64645C11.1209 7.84171 11.1209 8.15829 10.9257 8.35355L5.27921 14"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"></path>
        </svg>
      </a>
    </div>
    <!-- End Buttons -->
  </div>
</header>
<!-- End Hero -->
